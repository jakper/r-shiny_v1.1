library(shiny)
library(shinyAce)
library(shinyRGL)

shinyUI(navbarPage("Compositional Data Analysis",

  # importing the needed script and css files 
  tags$head(
      tags$link(rel="stylesheet", type="text/css",href="style.css"),
      tags$script(type="text/javascript", src = "busy.js"),
      tags$script(type="text/javascript", src = "d3.js"),
      tags$script(type="text/javascript", src = "polychart.js"),
      tags$script(type="text/javascript", src = "dialog.js")), 

  # sidePanel
  sidebarPanel(
   	tabsetPanel(
             tabPanel("Editor",
                  aceEditor("plotCode", 
                        mode = "r", 
                        value = ""),
                 
                    downloadButton(
                        outputId = "downloadCode", 
                        label    = "Download Code")),
             tabPanel("Data",
                   selectInput("choosedData", 
                  "Select Data",
                   c("Moss" = "moss",
                    "Humus" = "humus",
                    "Upload" = "upload")), 
                HTML('<img class="logoTU" src="logoTU.gif"/>
                     <img class="logoR" src="logoR.jpg"/>')
             )
        )	   
    ),
  
  # mainPanel
  mainPanel(
    HTML('<div class="busy"><p>Loading...</p><img src="load.gif"></img> </div>
         <div class="variableDialog" id = "variableDialog"></div>'),
    tabsetPanel(
      tabPanel("Plot",   
           HTML('<div id="plot" class="shiny-plot-output" style="width: 15cm; height:15cm"></div> ')),
       tabPanel("Data", HTML('<div id="table" class="shiny-html-output"></div>')),
      tabPanel("About", HTML('<div id="summary" class="shiny-html-output"></div>'))
    ))
  
))
